<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_conversion_item"
    android:layout_height="@dimen/dimen_conversion_height"
    android:background="@drawable/rectangle_conversion"
    android:id="@+id/ConversionItemParent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ConversionItemName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/sample"
        android:gravity="center"
        android:textSize="12sp"
        android:textAlignment="center"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/local_white"/>

</LinearLayout>